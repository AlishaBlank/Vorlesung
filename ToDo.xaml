<Page x:Class="Vorlesung.ToDo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vorlesung"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ToDo">

    <Grid>
        <StackPanel>
            <Label Content="Dies sind die ToDo´s!" FontSize="20"/>

            <WrapPanel Orientation="Horizontal" >
                <Button Content="Hinzufügen" Click="ToDosHinzufuegen"/>
                <Button Content="Löschen" Click="ToDosLoeschen"/>
                <Button Content="Bearbeiten" Click="ToDosBearbeiten"/>
                <Button Content="Erledigt" Click="ToDosErledigt" />
            </WrapPanel>

            <!-- ToDo-Liste -->
            <ListBox x:Name="ToDoList" Height="300" Margin="10">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding}" Value="[Erledigt]     ">
                                <Setter Property="Background" Value="Gray"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

        </StackPanel>
    </Grid>
</Page>
