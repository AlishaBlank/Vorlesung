<Window x:Class="Vorlesung.NoteneintragungDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vorlesung"
        mc:Ignorable="d"
        Title="Note eingeben" Height="200" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Fach:" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox x:Name="FachEingabe" Grid.Row="0" Margin="80,0,0,0"/>

        <TextBlock Text="Note:" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox x:Name="NoteEingabe" Grid.Row="1" Margin="80,0,0,0"/>

        <TextBlock Text="Kommentar:" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBox x:Name="KommentarEingabe" Grid.Row="2" Margin="80,0,0,0"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="75" Margin="5" Click="OkButton_Click"/>
            <Button Content="Abbrechen" Width="101" Margin="5" Click="AbbrechenButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
